{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "type": "object",
  "required": ["timezone", "privacyMode"],
  "properties": {
    "timezone": {
      "type": "string",
      "description": "Timezone for scheduling (e.g., America/Los_Angeles)",
      "pattern": "^[A-Za-z_]+/[A-Za-z_]+$"
    },
    "privacyMode": {
      "type": "string",
      "enum": ["minimal", "summary", "full"],
      "description": "How much prompt data to store"
    },
    "jiraUrl": {
      "type": "string",
      "description": "Jira instance URL (e.g., https://company.atlassian.net)"
    },
    "jiraUsername": {
      "type": "string",
      "description": "Jira username/email"
    },
    "jiraApiToken": {
      "type": "string",
      "description": "Jira API token or 1Password reference (op://...)"
    },
    "issueKeyPatterns": {
      "type": "array",
      "description": "Custom regex patterns for extracting issue keys (e.g., PROJ-123, TASK-456)",
      "items": {
        "type": "string"
      },
      "default": ["[A-Z]+-\\d+"]
    },
    "sessionGapMinutes": {
      "type": "number",
      "description": "Minutes of inactivity before starting new session",
      "default": 30,
      "minimum": 1,
      "maximum": 180
    },
    "dataDir": {
      "type": "string",
      "description": "Directory for storing data",
      "default": "~/.claude-retro"
    },
    "weeklyReportDay": {
      "type": "string",
      "enum": ["Monday", "Tuesday", "Wednesday", "Thursday", "Friday", "Saturday", "Sunday"],
      "default": "Friday"
    },
    "weeklyReportTime": {
      "type": "string",
      "pattern": "^([0-1][0-9]|2[0-3]):[0-5][0-9]$",
      "description": "Time for weekly report (HH:MM format)",
      "default": "15:00"
    }
  }
}
